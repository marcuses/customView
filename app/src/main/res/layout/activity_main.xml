<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.marcus.customviewdemo.MainActivity">

    <com.example.marcus.customviewdemo.customwidget.CustomTextView
        app:titleText="@string/app_name"
        app:titleTextColor="@color/colorAccent"
        app:titleTextSize="40sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>


    <com.example.marcus.customviewdemo.customwidget.CustomImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:titleText="@string/app_name"
        app:titleTextColor="@color/colorAccent"
        app:titleTextSize="40sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:src="@drawable/splash_anum_login_guide"
        app:scaletype="fitXY"
        />
</RelativeLayout>
