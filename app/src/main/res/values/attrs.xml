<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="titleText" format="string" />
    <attr name="titleTextColor" format="color"/>
    <attr name="titleTextSize" format="dimension"/>
    <attr name="src" format="reference|color"/>
    <attr name="scaletype">
        <enum name="fitXY" value="1" />
        <enum name="center" value="2"/>
    </attr>
    <attr name="circleRadius" format="dimension"/>
    <attr name="circleWidth" format="dimension"/>
    <attr name="circleFirstColor" format="color"/>
    <attr name="circleSecondColor" format="color"/>
    <attr name="circleDrawSpeed" format="integer"/>

    <declare-styleable name="CustomTextView">
        <attr name="titleText"/>
        <attr name="titleTextColor"/>
        <attr name="titleTextSize"/>
    </declare-styleable>

    <declare-styleable name="CustomImageView">
        <attr name="src"/>
        <attr name="titleText"/>
        <attr name="titleTextColor"/>
        <attr name="titleTextSize"/>
        <attr name="scaletype"/>
    </declare-styleable>

    <declare-styleable name="CustomCircle">
        <attr name="circleRadius"/>
        <attr name="circleWidth"/>
        <attr name="circleFirstColor"/>
        <attr name="circleSecondColor"/>
        <attr name="circleDrawSpeed"/>
    </declare-styleable>
</resources>